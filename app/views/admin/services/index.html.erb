<header class="stripe">
  <h1>Services</h1>
  <div class="img-shadow left"><%= image_tag("shadow-left.png") %></div>
  <div class="img-shadow right"><%= image_tag("shadow-right.png") %></div>    
</header>
<div id="main-content">
  <div class="service">
    <%= link_to "back", admin_dashboard_path %>
    <table border="1" cellpadding="10">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Base Cost</th>
        <th>Can be Checked Out</th>
        <th>Created At</th>
        <th>ID</th>
        <th></th>
      </tr>
      <% @services.each_with_index do |service, i| %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= service.name %></td>
          <td><%= number_to_currency(service.base_cost, unit: "&pound;", separator: ".", delimiter: "") %></td>
          <td><%= service.can_checkout %></td>
          <td><%= service.created_at %></td>
          <td><%= service.id %></td>
          <td><%= link_to("view", admin_service_path(service.id)) %></td>
        </tr>
      <% end %>
    </table>      
    <%= link_to "new service", new_admin_service_path %>
  </div>
</div>
