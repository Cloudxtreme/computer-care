<header class="stripe">
  <h1>Newsletter Subscribers</h1>
  <div class="img-shadow left"><%= image_tag("shadow-left.png") %></div>
  <div class="img-shadow right"><%= image_tag("shadow-right.png") %></div>  
</header>
<div id="main-content">
  <div class="service">
    <%= link_to "back", admin_dashboard_path %>
    <table border="1" cellpadding="10">
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>Created At</th>
        <th>ID</th>
        <th></th>
      </tr>
      <% @users.each_with_index do |user, i| %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <td><%= user.id %></td>
          <td><%= button_to("remove", admin_newsletter_user_path(user.id), :method => :delete) %></td>
        </tr>
      <% end %>
    </table>      
  </div>
</div>
