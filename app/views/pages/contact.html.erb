<% if flash[:notice] %>
    <div id="notice" style="display:none;">
        <%= flash[:notice] %>
    </div>
<% end %>
<div id="main-content">
  <header>
    <h1>Contact Us</h1>
  </header>  
  <div class="service">
    <div id="contact">
      <div class="pull-left">
        <p>
          If you have any questions please fill out the form below and we will be happy to help. 
        </p>
        <%= form_tag send_path do %>
          <div class="form-group">
            <input type="text" required class="input" placeholder="Name" name="name">
          </div>
          <div class="form-group">
            <input type="email" required class="input" placeholder="Email" name="email">
          </div>
          <div class="form-group">
            <input type="text" required class="input" placeholder="Contact Number" name="phone">
          </div>
          <div class="form-group">
            <textarea class="input" required placeholder="Message" name="message"></textarea>
          </div>
          <input type="submit" class="btn">
        <% end %>
      </div>
      <div class="pull-right">
        <p>
          Cheaper Computer Care is based in 
London but operates all over the UK.
        </p>
        <%= image_tag("bob-letter.png") %>
      </div>
    </div>
  </div>
</div>
