<div id="quote-form" class="first">
    <% if @missing.any? || @invalid.any? %>
      <div id="errors" class="well">
        <h5>Please fix the following errors before continuing:</h5>
        <% @missing.each do |field| %>
          <div class="alert alert-error">
            <p><strong><%= field.capitalize %></strong> is missing</p>
          </div>
        <% end %>
        <% @invalid.each do |field| %>
          <div class="alert alert-error">
            <p><strong><%= field.capitalize %></strong> is not valid</p>
          </div>
        <% end %>  
      </div> 
    <% end %> 
    <%= form_tag quote_send_service_path(@service.id), :method => :post, :class => "form-horizontal #{@missing.any? || @invalid.any? ? 'error' : ''}" do %>
      <header class="stripe order active">
        <span>1</span><h1>Quote Details</h1>
        <div class="img-shadow left"><%= image_tag("shadow-left.png") %></div>
        <div class="img-shadow right"><%= image_tag("shadow-right.png") %></div>  
      </header>
      <fieldset id="options" class="main-content">
        <p>Please complete the following information for a quote.</p>
            <div class="options well">
              <% @service.service_options.each do |option| %> 
                <% if option.is_arbitrary %>
                  <label for="<%= option.id %>"><%= option.name %></label>
                  <% placeholder = option.placeholder.blank? ? "" : option.placeholder %>
                  <textarea id="<%= option.id %>" name="options[<%= @service.id %>][<%= option.id %>]" placeholder="<%= placeholder %>"><%= session["options"][@service.id.to_s][option.id.to_s] if session["options"] and session["options"].any? && session["options"][@service.id.to_s] %></textarea>
                <% else %>
                  <label for="<%= option.id %>"><%= option.name %></label>
                  <select id="<%= option.id %>" name='<%= "options[#{@service.id}][#{option.id}]" %>'>
                    <% option.service_option_values.each do |value| %>
                      <option value="<%= value.id %>" data-additional="<%= value.additional_cost %>" <%= "selected" if session["options"] and session["options"][@service.id.to_s] && session["options"][@service.id.to_s][option.id.to_s].eql?(value.id.to_s) %>><%= value.name %></option>
                    <% end %>
                  </select><br><br>
                <% end %>
              <% end %>
            </div>
        <br>        
        <a class="btn btn-primary next js">next</a>
      </fieldset>
      <header class="stripe no-margin order">
        <span>2</span><h1>Customer Information</h1>
        <div class="img-shadow left"><%= image_tag("shadow-left.png") %></div>
        <div class="img-shadow right"><%= image_tag("shadow-right.png") %></div>
        <div class="img-shadow left top"><%= image_tag("shadow-top-left.png") %></div>
        <div class="img-shadow right top"><%= image_tag("shadow-top-right.png") %></div>
      </header>        
      <fieldset class="main-content" id="user">
        <p>Please fill out all of the fields below:</p>
        <div class="left">
          <div class="control-group">
            <label class="control-label" for="first-name">First Name</label>
            <div class="controls">
              <input type="text" id="first-name" name="order[first_name]" <%= form_value(session["first-name"]) %>>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="last-name">Last Name</label>
            <div class="controls">
              <input type="text" id="last-name" name="order[last_name]" <%= form_value(session["last-name"]) %>>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="email">Email</label>
            <div class="controls">
              <input type="text" id="email" name="order[email]" <%= form_value(session["email"]) %> class="tooltip" data-toggle="tooltip" title="to keep you informed on the progress of your required service">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="telephone">Phone Number</label>
            <div class="controls">
              <input type="text" id="telephone" name="order[telephone]" <%= form_value(session["telephone"]) %> class="tooltip" data-toggle="tooltip" title="to give you up-to-the-minute updates on the courier collecting or delivering your PC.  Also used by the courier service to arrange a collection time.">
            </div>
          </div>
        </div>
        <div class="right">
          <div class="control-group">
            <label class="control-label" for="building">Building Number</label>
            <div class="controls">
              <input type="text" id="building" name="order[building]" <%= form_value(session["building"]) %> class="tooltip" data-toggle="tooltip" title="where to collect and deliver your PC">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="street">Street Name</label>
            <div class="controls">
              <input type="text" id="street" name="order[street]" <%= form_value(session["street"]) %> class="tooltip" data-toggle="tooltip" title="where to collect and deliver your PC">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="town">Town</label>
            <div class="controls">
              <input type="text" id="town" name="order[town]" <%= form_value(session["town"]) %> class="tooltip" data-toggle="tooltip" title="where to collect and deliver your PC">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="postcode">Postcode</label>
            <div class="controls">
              <input type="text" id="postcode" name="order[postcode]" <%= form_value(session["postcode"]) %> class="tooltip" data-toggle="tooltip" title="where to collect and deliver your PC">
            </div>
          </div>
        </div>
        <div style="clear:both;"></div>
        <a class="btn back js">back</a>
        <%= submit_tag "Get Quote", :class => "next btn btn-primary" %>
      </fieldset>
      <footer class="stripe no-margin">   
        <div class="img-shadow left top"><%= image_tag("shadow-top-left.png") %></div>
        <div class="img-shadow right top"><%= image_tag("shadow-top-right.png") %></div>        
      </footer>
    <% end %>
</div>